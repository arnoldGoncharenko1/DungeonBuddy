            <Button
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/btnWisMinus"
                android:layout_column="5"
                android:layout_marginLeft="10dp"
                android:onClick="scoreWisButton" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/lblWis"
                android:layout_column="7"
                android:text="Wisdom"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="-1"
                android:id="@+id/lblWisMod"
                android:layout_column="8"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="-1"
                android:id="@+id/lblWisSave"
                android:layout_column="9"
                android:layout_marginLeft="35dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="+"
                android:id="@+id/btnChaPlus"
                android:layout_column="1"
                android:layout_marginRight="10dp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:onClick="scoreChaButton" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/lblChaScore"
                android:layout_column="3"
                android:layout_marginTop="2dp"
                android:text="8" />

            <Button
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/btnChaMinus"
                android:layout_column="5"
                android:layout_marginLeft="10dp"
                android:onClick="scoreChaButton" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/lblCha"
                android:layout_column="7"
                android:text="Charisma"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
